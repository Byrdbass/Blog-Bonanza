<div class="container">
    <div class="row col">
        <h2>Topic Page
            <a href="/blog_post/{{blogPosts.id}}">{{blogPosts.id}}</a>
        </h2>
        <p>
            {{blogPosts.content}}{{blogPosts.topic}}{{blogPosts.date_created}}
        </p>
    </div>
</div>
<div class="card">
    {{#each blogPosts.comments as |comment|}}
    <p>{{comment.response}}</p>
        <p>{{comment.date_created}}</p>
    {{/each}}
</div>

